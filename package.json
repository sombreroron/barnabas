{
  "name": "barnabas",
  "version": "1.0.0",
  "description": "",
  "author": "sombreroron",
  "private": false,
  "license": "",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "cross-env ENV=test jest",
    "test-watch": "cross-env ENV=test jest --watch",
    "test:cov": "cross-env ENV=test jest --collect-coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config src/test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.4",
    "@nestjs/core": "^8.0.4",
    "@nestjs/platform-express": "^8.0.4",
    "@nestjs/swagger": "^5.0.8",
    "avsc": "^5.7.9",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "kafkajs": "^2.1.0",
    "lodash": "^4.17.21",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "swagger-ui-express": "^4.1.6",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.2",
    "@nestjs/schematics": "^8.0.2",
    "@nestjs/testing": "^8.0.4",
    "@types/express": "^4.17.13",
    "@types/jest": "26.0.24",
    "@types/node": "^16.4.3",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "4.28.4",
    "@typescript-eslint/parser": "4.28.4",
    "cross-env": "^7.0.3",
    "eslint": "7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "husky": "^7.0.1",
    "jest": "27.0.6",
    "jest-junit": "^12.2.0",
    "prettier": "^2.3.2",
    "pretty-quick": "^3.1.1",
    "supertest": "^6.1.4",
    "ts-jest": "27.0.4",
    "ts-loader": "^9.2.4",
    "ts-node": "^10.1.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleNameMapper": {
      "@kafka/(.*)": "<rootDir>/kafka/$1",
      "@message/(.*)": "<rootDir>/message/$1"
    },
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "coverage/",
          "outputName": "unit-tests-result.xml"
        }
      ]
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "!**/node_modules/**",
      "!logger/**",
      "!general/**",
      "!filters/**",
      "!utils/**",
      "!**/**/*.module.ts",
      "!main.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
